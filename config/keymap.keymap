/ {
    keymap {
        compatible = "zmk,keymap";

        default {
            bindings = <
                &kp A       &kp B       &kp C
                &tb_pim447_led  /* 트랙볼 LED 토글 */
            >;
        };
    };
};

/* behaviors.dtsi에서 tb_pim447_led 정의 필요 */
&behaviors {
    tb_pim447_led: trackball_pim447_led {
        compatible = "zmk,behavior-pim447-led";
        #binding-cells = <1>;
        trackball = <&pim447_trackball>;
        default-state = "on";
    };
};
